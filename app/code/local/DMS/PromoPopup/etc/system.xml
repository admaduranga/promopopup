<config>
    <tabs>
        <dms_promopopup translate="label" module="promopopup">
            <label>Promo Popup</label>
            <sort_order>0</sort_order>
        </dms_promopopup>
    </tabs>
    <sections>
        <promopopup_settings translate="label" module="promopopup">
            <label>Settings</label>
            <tab>dms_promopopup</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Popup</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Disable or Enable the popup</comment>
                        </enabled>
                        <wait_before translate="label">
                            <label>Wait before showing the popup</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>How many seconds MINIMUM to wait before showing the popup</comment>
                        </wait_before>
                        <close_after translate="label">
                            <label>Close the popup after</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>(in Milliseconds)</comment>
                        </close_after>
                        <static_block_id translate="label">
                            <label>Used static block id for Content</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>(For store specific content, create static blocks with SAME IDENTIFIER and assign to correct store/view)</comment>
                        </static_block_id>
                    </fields>
                </general>
            </groups>
        </promopopup_settings>
    </sections>
</config>
